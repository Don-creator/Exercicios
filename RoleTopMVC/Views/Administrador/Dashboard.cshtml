@model RoletopMVC.ViewModels.DashboardViewModel
<link >
    <main>
        <h2>Dashboard</h2>
        <section id="status-alugueis">
            <h3>Status dos pedidos</h3>
            <div id="painel">
                <div class="box-status-alugueis aprovados">
                    <h4>Aprovados</h4>
                    <p>@Model.alugueisAprovados</p>
                </div>
                <div class="box-status-alugueis pendentes">
                    <h4>Pendentes</h4>
                    <p>@Model.alugueisPendentes</p>
                </div>
                <div class="box-status-alugueis reprovados">
                    <h4>Reprovados</h4>
                    <p>@Model.alugueisReprovados</p>
                </div>
            </div>
        </section>

        <section id="lista-alugueis">
            <h3>Lista de Alugueis</h3>
            <table>
                <thead>
                    <tr>
                        <th rowspan="2">Nome</th>
                        <th rowspan="2">Endere√ßo</th>
                        <th colspan="2">Aluguel</th>
                        <th colspan="2" rowspan="2">Aprovar</th>
                    </tr>
                    <tr>
                    
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <td colspan="6">
                            <p>Alugueis atualizados em @DateTime.Now</p>
                        </td>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach(var aluguel in Model.Alugueis )
                    {
                        <tr>
                            <td>@aluguel.Cliente.Nome</td>
                            <td>@aluguel.Cliente.Endereco</td>
                            <td><a href='@Url.Action("Aprovar", "Aluguel", new {id = @aluguel.Id})'><i class="fas fa-check"></i></a></td>
                            <td><a href='@Url.Action("Reprovar", "Aluguel", new {id = @aluguel.Id})'><i class="fas fa-times"></i></a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </section>

    </main>